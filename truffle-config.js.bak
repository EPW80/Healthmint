// truffle-config.js
import HDWalletProvider from "@truffle/hdwallet-provider";
import dotenv from "dotenv";

// Load environment variables
dotenv.config();

// Export configuration
export default {
  networks: {
    // Development network for local testing
    development: {
      host: "127.0.0.1",
      port: 8545,
      network_id: "*",
    },

    // Sepolia testnet
    sepolia: {
      provider: () => {
        if (!process.env.PRIVATE_KEY || !process.env.SEPOLIA_RPC_URL) {
          console.warn("Missing PRIVATE_KEY or SEPOLIA_RPC_URL in .env");
          return null;
        }
        return new HDWalletProvider({
          privateKeys: [process.env.PRIVATE_KEY],
          providerOrUrl: process.env.SEPOLIA_RPC_URL,
          pollingInterval: 180000,
        });
      },
      network_id: 11155111, // Sepolia network ID
      gas: 5500000,
      gasPrice: 20000000000,
      confirmations: 2,
      timeoutBlocks: 200,
      skipDryRun: true,
    },
  },

  // Specify Solidity compiler version 0.8.19
  compilers: {
    solc: {
      version: "0.8.19",
      settings: {
        optimizer: {
          enabled: true,
          runs: 200,
        },
      },
    },
  },

  // Configure directories
  contracts_directory: "./contracts",
  contracts_build_directory: "./client/src/contracts",
  migrations_directory: "./migrations",
};
