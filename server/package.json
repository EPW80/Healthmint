{
  "name": "server",
  "version": "1.0.0",
  "main": "server.js",
  "description": "Backend server for Healthmint API.",
  "scripts": {
    "start": "node server.js",
    "prestart": "npm install",
    "dev": "nodemon --experimental-specifier-resolution=node server.js",
    "test": "jest --detectOpenHandles",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "build": "npm run clean && npm run build-babel",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "blockchain",
    "healthcare",
    "ethereum",
    "web3"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "buffer": "^6.0.3",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.7",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "ipfs-http-client": "^50.1.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.2",
    "morgan": "^1.10.0",
    "web3": "^1.10.4",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.2.0",
    "supertest": "^6.3.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/epw80/healthmint"
  }
}
